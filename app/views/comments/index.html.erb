<%= turbo_frame_tag "comments_#{params[:post_id]}" do %>
  <%= render partial: "posts/form", locals: {post: Comment.new, is_comment: true} %>
  <% if @comments %>
    <% @comments.each do |comment| %>
      <%= render partial: "posts/post", locals: {post: comment, is_comment: true} %>
    <% end %>
  <% end %>
<% end %>
<%= turbo_stream.prepend "flash", partial: "layouts/flash" %>